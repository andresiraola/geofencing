<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>addGeofence</servlet-name>
        <servlet-class>addGeofence</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addGeofence</servlet-name>
        <url-pattern>/addGeofence</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AuthentificationFilter</filter-name>
        <filter-class>AuthentificationFilter</filter-class>
    </filter>
<!--check l'accès au page jsp et vérifie qu'une session utilisateur est bien connectée -->
    <filter-mapping>
        <filter-name>AuthentificationFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthentificationFilter</filter-name>
        <url-pattern>/account.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthentificationFilter</filter-name>
        <url-pattern>/home.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthentificationFilter</filter-name>
        <url-pattern>/help.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AuthentificationServlet</servlet-name>
        <servlet-class>AuthentificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthentificationServlet</servlet-name>
        <url-pattern>/AuthentificationServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
